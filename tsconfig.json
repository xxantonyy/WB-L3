{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "*.ts": ["*"]
  }
}
